---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---
<html lang="en">
  <head>    
    <title>{title}</title>
    <BaseHead/>
  </head>

  
  <body>
    <Header />

    <main class="main">
      <slot />
    </main>
    
    <Footer />

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js" is:inline></script>
    <script src="/vendor/php-email-form/validate.js" is:inline></script>
    <script src="/vendor/aos/aos.js" is:inline></script>
    <script src="/vendor/waypoints/noframework.waypoints.js" is:inline></script>
    <script src="/vendor/purecounter/purecounter_vanilla.js" is:inline></script>
    <script src="/vendor/swiper/swiper-bundle.min.js" is:inline></script>
    <script src="/vendor/glightbox/js/glightbox.min.js" is:inline></script>
    <script src="/vendor/imagesloaded/imagesloaded.pkgd.min.js" is:inline></script>
    <script src="/vendor/isotope-layout/isotope.pkgd.min.js" is:inline></script>

    <!-- Main JS File -->
    <script src="/js/main.js" is:inline></script>
    
  </body>

</html>
